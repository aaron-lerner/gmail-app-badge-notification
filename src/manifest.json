{
  "name": "Gmail App Unread Count",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Show unread email count as a badge notifications when using Gmail as a PWA",
  "homepage_url": "https://github.com/aaron-lerner/gmail-app-badge-notification",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mail.google.com/mail/*"],
      "js": ["content.js"]
    }
  ]
}
